<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Referrals - @ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
        <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        @Html.Partial("Header")

        <!-- Panel is floating, sized and positioned when window loads and resizes, into divLeftPanel -->
        @Html.Partial("LeftPanel")

        <!-- Panel is floating, sized and positioned when window loads and resizes, into divRightPanel -->
        @Html.Partial("RightPanel")

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2" id="divLeftPanel"></div>
                <div class="col-md-8 panel panel-primary" id="divMainPanel">
                    <div class="panel-heading">
                        <h3 class="panel-title">@RenderSection("TitleIcon", required: false)@ViewBag.Title</h3>
                    </div>
                    <div class="panel-body" style="margin:0px;padding:0px;">
                        <div id="divMainPanelInner" style="background-color:#fff;margin:0px;padding:2px;margin-bottom:10px;width:100%;">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="col-md-2" id="divRightPanel"></div>
            </div>
        </div>

        <!-- Modals -->

        <!-- Generic dialog box w/message & NO buttons -->
        <div class="modal fade" id="modalProcessing" tabindex="-1" role="dialog" aria-labelledby="modalProcessingTitle" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="modalProcessingTitle">Referrals.com</h4>
              </div>
                <div class="modal-body">
                    <div class="center-block">
                        <div id="procMsg" style="text-align:center;"></div>
                        <img class="center-block" src="~/images/loading_animated.gif" style="width:60px;" />
                    </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Generic dialog box w/message & OK button -->
        <div class="modal fade" id="modalOk" tabindex="-1" role="dialog" aria-labelledby="modalOkTitle" aria-hidden="true">
          <div class="modal-dialog modal-info">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="modalOkTitle">Referrals.com</h4>
              </div>
              <div class="modal-body">
                <div class="center-block" id="okMsg" style="text-align:center;"></div>
              </div>
              <div class="modal-footer">
                <a id="btnOK" href="#" class="btn btn-default" data-dismiss="modal">OK</a>
              </div>
            </div>
          </div>
        </div>

        <script src="~/scripts/jquery.min.js" ></script>
        <script src="~/scripts/bootstrap.min.js"></script>
        <script src="~/scripts/global.js"></script>
        <script src="~/scripts/mainpanel.js"></script>
        <script src="~/scripts/leftpanel.js"></script>
        <script src="~/scripts/rolodex.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
